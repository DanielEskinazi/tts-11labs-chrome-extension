{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ElevenLabs TTS Extension - Storage Schema",
  "description": "JSON Schema for chrome.storage.local data structure (Phase 1: Basic Setup)",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "elevenlabs_api_key_config": {
      "type": "object",
      "description": "API Key Configuration Entity",
      "properties": {
        "apiKey": {
          "type": "string",
          "description": "ElevenLabs API key (64-character hexadecimal string)",
          "pattern": "^[a-fA-F0-9]{64}$",
          "minLength": 64,
          "maxLength": 64,
          "examples": [
            "fdf15a7446ffbcc9fffa7879fe4db77f7dde506da4fd8af161163afa3d506fdb"
          ]
        },
        "createdAt": {
          "type": "integer",
          "description": "Unix timestamp in milliseconds when API key was first saved",
          "minimum": 0,
          "examples": [
            1697500000000
          ]
        },
        "updatedAt": {
          "type": "integer",
          "description": "Unix timestamp in milliseconds when API key was last updated",
          "minimum": 0,
          "examples": [
            1697500000000
          ]
        }
      },
      "required": ["apiKey", "createdAt", "updatedAt"],
      "additionalProperties": false
    }
  },
  "additionalProperties": true,
  "examples": [
    {
      "elevenlabs_api_key_config": {
        "apiKey": "fdf15a7446ffbcc9fffa7879fe4db77f7dde506da4fd8af161163afa3d506fdb",
        "createdAt": 1697500000000,
        "updatedAt": 1697500000000
      }
    }
  ],
  "definitions": {
    "timestamp": {
      "type": "integer",
      "description": "Unix timestamp in milliseconds",
      "minimum": 0
    },
    "apiKeyFormat": {
      "type": "string",
      "description": "64-character hexadecimal string",
      "pattern": "^[a-fA-F0-9]{64}$"
    }
  }
}
